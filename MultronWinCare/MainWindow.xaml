<Window x:Class="MultronWinCare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultronWinCare"
        mc:Ignorable="d"
          
        Title="Multron Windows Care" Height="600" Width="1100"
        Background="#1e1e1e" WindowStartupLocation="CenterScreen"
    
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResize" Loaded="Window_Loaded">
  
    <Window.Resources>
        
        <Color x:Key="BaseBlack">#FF0F1113</Color>
    
        <Color x:Key="BaseWhite">#FFFFFFFF</Color>
        <Color x:Key="Gray-900">#FF1F2224</Color>
        <Color x:Key="Gray-700">#FF4B5257</Color>
        <Color x:Key="Gray-500">#FF787E83</Color>
        <Color x:Key="Gray-300">#FFD9DDDF</Color>
        <Color x:Key="Gray-100">#FFF3F5F6</Color>
 
        <Color x:Key="AccentPrimaryColor">#FF1F6AA5</Color>
 
        <Color x:Key="AccentSecondaryColor">#FF5A6065</Color>
     
     
   
        <Color x:Key="AccentSubtleColor">#FF2E3235</Color>

   
  
        <SolidColorBrush x:Key="PrimaryActionBrush" Color="{DynamicResource AccentPrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryActionHoverBrush" Color="#FF175987"/> 
        <SolidColorBrush x:Key="PrimaryActionPressedBrush" Color="#FF0F3B56"/>
 
        <SolidColorBrush x:Key="SecondaryActionBrush" Color="{DynamicResource AccentSecondaryColor}"/>
        <SolidColorBrush x:Key="SecondaryActionHoverBrush" Color="#FF4A5054"/>
        <SolidColorBrush x:Key="SecondaryActionPressedBrush" Color="#FF393D40"/>
 
        <SolidColorBrush x:Key="SuccessActionHoverBrush" Color="#FF0E5E49"/>
        <SolidColorBrush x:Key="SuccessActionPressedBrush" Color="#FF083833"/>

        
        <SolidColorBrush x:Key="NeutralActionBrush" Color="{DynamicResource Gray-300}"/>
        <SolidColorBrush x:Key="NeutralActionHoverBrush" Color="{DynamicResource Gray-100}"/>
        <SolidColorBrush x:Key="NeutralActionPressedBrush" Color="#FFDEDEDE"/>

      
        <SolidColorBrush x:Key="ActionForegroundOnDark" Color="{DynamicResource BaseWhite}"/>
        <SolidColorBrush x:Key="ActionForegroundOnLight" Color="{DynamicResource BaseBlack}"/>
 
 
        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                              
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.995" ScaleY="0.995"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource FlatButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource PrimaryActionBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ActionForegroundOnDark}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button" >
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource PrimaryActionHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource PrimaryActionPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style> 
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource FlatButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SecondaryActionBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ActionForegroundOnDark}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource SecondaryActionHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource SecondaryActionPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
 
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource FlatButtonStyle}">
            <Setter Property="Background" Value="#FF117A65"/>
            <Setter Property="Foreground" Value="{DynamicResource ActionForegroundOnDark}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource SuccessActionHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource SuccessActionPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="WindowBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TitleBarBackground" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="CardBackground" Color="#F9F9F9"/>
        <SolidColorBrush x:Key="SideMenuBackground" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#606060"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#0078d4"/>
        <SolidColorBrush x:Key="ToggleOffBrush" Color="#FF7A7A7A"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078d4"/>
        <SolidColorBrush x:Key="AccentStatusBrush" Color="#0078d4"/>
        <SolidColorBrush x:Key="MenuItemSelected" Color="#E1F3FF"/>
        <SolidColorBrush x:Key="MenuBorder" Color="#E1E1E1"/>
        
        <SolidColorBrush x:Key="SuccessBackground" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessHover" Color="#059669"/>
        <SolidColorBrush x:Key="SuccessPressed" Color="#047857"/>
        <SolidColorBrush x:Key="HoverAccentBrush" Color="#1e8fe6"/>
        <SolidColorBrush x:Key="CloseHoverBrush" Color="#e81123"/>

        <Color x:Key="ToggleOffColor">#555555</Color>
        <Color x:Key="AccentColor">#0078d4</Color>
        <Color x:Key="HoverColor">#1e8fe6</Color>
        <Color x:Key="CloseHoverColor">#e81123</Color>
        <SolidColorBrush x:Key="ToggleTrackBackground" Color="#E6E6E6"/>
        
        <SolidColorBrush x:Key="ToggleThumbBackground" Color="#FFFFFF"/>
       
        <SolidColorBrush x:Key="ToggleActiveBackground" Color="#4CAF50"/>
     
        <Style x:Key="LocalToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                        
                            <Border x:Name="Track"
                            CornerRadius="16"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{DynamicResource ToggleTrackBackground}"/>

                       
                            <Border x:Name="Thumb"
                            Width="24"
                            Height="24"
                            CornerRadius="12"
                            Background="{DynamicResource ToggleThumbBackground}"
                            Margin="3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4"
                                              ShadowDepth="1"
                                              Opacity="0.12"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
 
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track" Property="Opacity" Value="0.95"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Thumb" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{DynamicResource ToggleActiveBackground}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Color x:Key="BlackColor">#FF000000</Color>
        <Color x:Key="WhiteColor">#FFFFFFFF</Color>
        <Color x:Key="GrayColor">#FF333333</Color>
        <Color x:Key="LightGrayColor">#FFCCCCCC</Color>

   
    
        <SolidColorBrush x:Key="ButtonBackground" Color="{DynamicResource BlackColor}"/>
        <SolidColorBrush x:Key="ButtonForeground" Color="{DynamicResource WhiteColor}"/>
      
        <SolidColorBrush x:Key="RecommendedHover" Color="{DynamicResource GrayColor}"/>
        <SolidColorBrush x:Key="RecommendedPressed" Color="{DynamicResource BlackColor}"/>
        <SolidColorBrush x:Key="ButtonPressed" Color="{DynamicResource GrayColor}"/>
        <SolidColorBrush x:Key="AccentHover" Color="{DynamicResource GrayColor}"/>
        <SolidColorBrush x:Key="AccentPressed" Color="{DynamicResource BlackColor}"/>

        <Style x:Key="StatusCircleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <Ellipse x:Name="Ring" Stroke="#6F6F6F" StrokeThickness="1.6" Fill="Transparent"/>
                            <Viewbox Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="Icon" Text="?" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Ring" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.08" ScaleY="1.08"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Recommended">
                                <Setter TargetName="Ring" Property="Stroke" Value="#4CAF50"/>
                                <Setter TargetName="Icon" Property="Text" Value="âœ”"/>
                                <Setter TargetName="Icon" Property="Foreground" Value="#4CAF50"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Optional">
                                <Setter TargetName="Ring" Property="Stroke" Value="#FFC107"/>
                                <Setter TargetName="Icon" Property="Text" Value="âš "/>
                                <Setter TargetName="Icon" Property="Foreground" Value="#FFC107"/>
                            </DataTrigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Ring" Property="Fill" Value="#0F000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    
        <Color x:Key="PrimaryTextColor">#FF000000</Color>
        <Color x:Key="SecondaryTextColor">#FF606060</Color>
        <Color x:Key="SuccessBackgroundColor">#FF10B981</Color>

      
        <SolidColorBrush x:Key="ButtonHover" Color="#FF333333"/>
    
        <Style x:Key="LocalSettingRow" TargetType="Grid">
            <Setter Property="Margin" Value="0,1.5,0,1.5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="SecondarySmall" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="DividerStyle" TargetType="Separator">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,2.5,0,2.5"/>
            <Setter Property="Background" Value="{DynamicResource SeparatorColor}"/>
        </Style>



      
  

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

         
   
        <Color x:Key="AccentColorValue">#0078D4</Color>
        <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColorValue}"/>
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track" CornerRadius="12" Background="#bbb" />
                            <Ellipse x:Name="Thumb" Width="20" Height="20" Fill="White" Margin="2" HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#66BB6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FlatButtonBase" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.996" ScaleY="0.996"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="ForegroundOnAccentDark" Color="{DynamicResource BaseWhite}"/>
        <Color x:Key="AccentBlue">#FF1F6AA5</Color>
        
        <Color x:Key="AccentGreen">#FF117A65</Color>
   
        <Color x:Key="AccentGraphite">#FF5A6065</Color>
        <SolidColorBrush x:Key="PressedAccentBrush" Color="#FF1976D2"/>
        <SolidColorBrush x:Key="RecommendedActionBrush" Color="{DynamicResource AccentGreen}"/>
        <SolidColorBrush x:Key="RecommendedActionHoverBrush" Color="#FF0E5E49"/>
        <SolidColorBrush x:Key="RecommendedActionPressedBrush" Color="#FF083833"/>
        <Style x:Key="RecommendedButtonStyle" TargetType="Button" BasedOn="{StaticResource FlatButtonBase}">
            <Setter Property="Background" Value="{DynamicResource RecommendedActionBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundOnAccentDark}"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource RecommendedActionHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource RecommendedActionPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="ElevatedBackground" Color="#282828"/>

        <SolidColorBrush x:Key="SubtleAccentBackground" Color="#330078D4"/>

        <SolidColorBrush x:Key="AccentForeground" Color="White"/>
        <Style x:Key="AccentButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FlatButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                     CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <SolidColorBrush x:Key="NeutralButtonForeground" Color="#FF1F2224"/>
        <Style x:Key="NeutralButtonStyle" TargetType="Button" BasedOn="{StaticResource FlatButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource NeutralActionBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource NeutralButtonForeground}"/>
          
            <Setter Property="BorderBrush" Value="{DynamicResource MenuBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource NeutralActionHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource NeutralActionPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="Icon" Text="{TemplateBinding Tag}" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuItemSelectedStyle" TargetType="Button" BasedOn="{StaticResource MenuItemStyle}">
            <Setter Property="Background" Value="{DynamicResource MenuItemSelected}"/>
        </Style>

         

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                        Background="{TemplateBinding Background}"
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
            
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverAccentBrush}"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

               
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PressedAccentBrush}"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <SolidColorBrush x:Key="SeparatorColor" Color="#E0E0E0" />
     
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CloseHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource WindowBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
 
            <Border Grid.Row="0" Background="{DynamicResource TitleBarBackground}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
